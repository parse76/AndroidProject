<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/list_horizontal_card_padding" >

    <Button
        android:id="@+id/btnBeginEndHike"
        style="@style/TrailGuide.ButtonGreen"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:text="@string/begin_hike" />

    <Button
        android:id="@+id/btnCompleteStory"
        style="@style/TrailGuide.ButtonGrey"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:text="@string/complete_story" />

</LinearLayout>