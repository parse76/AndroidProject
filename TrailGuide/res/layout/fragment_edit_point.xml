<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/background_secondary"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llEditNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_secondary"
        android:orientation="vertical"
         >

        <ImageView
            android:id="@+id/ivPointInfo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:contentDescription="Info about location (visual, nodb)"
            android:padding="5dp"
            android:src="@drawable/ic_loading_location" />

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edit_tile"
            android:ems="10"
            android:hint="@string/point_note"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="5dp" >

            <requestFocus />
        </EditText>

        <include layout="@layout/include_dialog_buttons" />
    </LinearLayout>

</LinearLayout>