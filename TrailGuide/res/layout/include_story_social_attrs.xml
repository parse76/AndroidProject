<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnLikesIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_heart_144_red_shadow" />

    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/btnLikesIcon"
        android:text="@string/num_refs"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/btnRefsIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tvLikes"
        android:background="@drawable/ic_link_144_orange_shadow" />

    <TextView
        android:id="@+id/tvRefs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/btnRefsIcon"
        android:text="@string/num_refs"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:typeface="monospace" />

    <Button
        android:id="@+id/ivShareIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tvRefs"
        android:background="@drawable/ic_share_144_orange_shadow" />

</RelativeLayout>
