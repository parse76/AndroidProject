<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@android:integer/config_shortAnimTime"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">  <solid android:color="@color/item_pressed" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@color/item_focused">
        <shape android:shape="rectangle">  <solid android:color="@color/item_focused" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@color/item_focused">
        <shape android:shape="rectangle">  <solid android:color="@color/item_focused" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">  <solid android:color="@android:color/white" />
        </shape>
    </item>
</selector>