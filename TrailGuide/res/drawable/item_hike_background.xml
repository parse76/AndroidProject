<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- background shadow -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#cccaca" />
        </shape>
    </item>

	<!-- background color -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/background_white" />
        </shape>
    </item>

</layer-list>
