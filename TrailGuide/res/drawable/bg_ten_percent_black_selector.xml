<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="@integer/touch_enter_fade_speed" android:exitFadeDuration="@integer/touch_exit_fade_speed"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ten_percent_black" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@color/item_focused">
        <shape android:shape="rectangle">
            <solid android:color="@color/ten_percent_black" />
        </shape>
    </item>
    <item android:state_checked="true" android:drawable="@color/item_focused">
        <shape android:shape="rectangle">
            <solid android:color="@color/ten_percent_black" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>